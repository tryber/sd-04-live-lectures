const express = require('express')
const app = express()
const port = 3000

app.set('view engine', 'ejs');

const basicUpload = require('./basicUpload');
const diskStorageUpload = require('./diskStorageUpload');
const multiUpload = require('./multiUpload');



app.use(express.static(__dirname + '/uploads'));

app.get('/form', (req, res) => {
  res.render('form');
})

app.post('/files/upload', basicUpload);
app.post('/documentos/upload', diskStorageUpload);
app.post('/multi/upload', multiUpload);

app.listen(port, () => console.log(`Example app listening on port port!`))